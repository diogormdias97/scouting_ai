import streamlit as st
import pandas as pd
from sklearn.linear_model import LinearRegression

# Load data
players_df = pd.read_csv("data/players_data.csv")
attribute_cols = ["Pace", "Shooting", "Passing", "Dribbling", "Defending",
                  "Physical", "Vision", "Composure", "Ball_Control"]
target_col = "Avg_Rating"

# Treinar modelo
X = players_df[attribute_cols]
y = players_df[target_col]
model = LinearRegression().fit(X, y)

# PÃ¡gina
st.title("ðŸ“ˆ Talent Evolution Predictor")
player = st.selectbox("Choose a player", players_df["Name"].unique())
player_data = players_df[players_df["Name"] == player][attribute_cols]

prediction = model.predict(player_data)[0]
st.success(f"ðŸŽ¯ Predicted Avg Rating: {prediction:.2f}")
